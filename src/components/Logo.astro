---
import site from "@/site.json";
import ImageMod from "./ImageMod.astro";

const logo = site.logo;
---

<a href="/" class="navbar-brand inline-block">
  <ImageMod
    src={logo.src}
    class="inline-block"
    width={logo.width * 2}
    height={logo.height * 2}
    alt={logo.alt}
    style={{
      height: logo.height,
      width: logo.width,
    }}
    format="webp"
  />
</a>
