---
import { markdownify } from "@/lib/utilities";

interface Props {
  button?: {
    href: string;
    text: string;
  };
  image?: {
    alt: string;
    src: string;
  };
  text?: {
    sections: {
      heading: string;
      text: string;
    }[];
  };
  title: string;
}

const { button, image, text, title } = Astro.props;
---

<section class={`section ${image ? "py-14" : "pb-0 pt-14"}`}>
  <div class="container">
    <div class="row justify-center">
      <div class="lg:col-8 md:col-10 text-center">
        <h1 set:html={markdownify(title)} class="text-h3 lg:text-h1" />
        {
          text && (
            <div class="flex flex-col gap-8 mt-4">
              {text.sections.map((section) => (
                <div>
                  {section.heading && (
                    <h2
                      class="text-h6"
                      set:html={markdownify(section.heading)}
                    />
                  )}
                  <p
                    class="-indent-4 text-lg"
                    set:html={markdownify(section.text)}
                  />
                </div>
              ))}
            </div>
          )
        }
        {
          button && (
            <a
              class="btn btn-lg btn-primary mt-8"
              href={button.href}
              target={button.href.startsWith("http") ? "_blank" : "_self"}
              rel="noopener"
            >
              {button.text}
            </a>
          )
        }
      </div>
      {
        image && (
          <div class="col-12 my-8 flex justify-center">
            <img class="max-w-4xl" alt={image.alt} src={image.src} />
          </div>
        )
      }
    </div>
  </div>
</section>
